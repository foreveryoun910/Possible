<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yedam.possable.app.car.mapper.CarMapper">
    <select id="getCarList" resultType="CarVO">
        SELECT *
        FROM car
    </select>

    <select id="getCar" resultType="CarVO">
        SELECT *
        FROM car
        WHERE seq = #{seq}
    </select>

    <select id="getCarOptions" resultType="CarOptionVO">
        SELECT opt_code
        FROM car_option
        WHERE car_seq = #{seq}
    </select>

    <select id="getCarInsurance" resultType="InsuranceOptionVO">
        SELECT opt_code
        FROM insurance_option
        WHERE car_seq = #{seq}
    </select>
    
    <!-- 업체 보유 렌트카 전체 리스트 -->
	<select id="companyCarList" resultType="CarVO"	parameterType="CarVO">
		SELECT  SEQ,
				BRAND,
				MODEL,
				YEAR,
				STATUS,
				IMG1
		FROM CAR
		WHERE CMPN_SEQ = #{companyVO.seq}
	</select>
	
	<!-- 업체 보유 렌트카 한건 -->
	<select id="companyCarOneSelect" resultType="CarVO"	parameterType="CarVO">
		SELECT SEQ,
				BRAND,
				MODEL,
				SEGMENT,
				TRIM,
				COLOR,
				YEAR,
				FUEL,
				PASSENGER,
				MISSION,
				TRUNK,
				DOOR,
				KMPL,
				PRICE,
				STATUS,
				IMG1,
				IMG2,
				IMG3,
				GEN_DATE,
				UPT_DATE,
				CAR_NUM
		FROM CAR
		WHERE SEQ = #{seq}
	</select>
	
	<!-- 업체 보유 렌트카 삭제 -->
	<delete id="companyCarDel">
		DELETE FROM CAR
		WHERE SEQ = #{seq}
	</delete>
</mapper>
