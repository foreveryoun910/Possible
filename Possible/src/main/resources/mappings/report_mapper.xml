<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yedam.possable.app.community.report.mapper.ReportMapper">
	
	<sql id="criteria">
				<trim prefix="(" suffix=")" prefixOverrides="OR">
             		<foreach collection="typeArr" item="type">
             			<trim prefix="OR">
             				<choose>
				             	<when test="type == 'T'.toString()">
				                   TITLE LIKE '%' || #{keyword} || '%'
				                </when>
				                <when test="type == 'C'.toString()">
				                   CONTENT LIKE '%' || #{keyword} || '%'
				                </when>
				                <when test="type == 'W'.toString()">
				                   WRITER LIKE '%' || #{keyword} || '%'
				                </when>
             				</choose>
             			</trim>
             		</foreach>
             	</trim>
	</sql>
	
	<!-- 전체 수 계산기능 -->
	<select id="getTotalCount" resultType="int">
			SELECT COUNT(*)
			FROM REPORT_BOARD
				<where>
					<include refid="criteria"></include>
				</where>
	</select>
	
	<!-- 신고글 리스트 -->
	<select id="getReportList" resultType="ReportVO">
		SELECT * FROM (
		SELECT /*+ INDEX_DESC(REPORT_BOARD IDX_REPORT_BOARD) */
		ROWNUM RN, SEQ, TARGET, WRITER, REASON, GEN_DATE
		FROM REPORT_BOARD
		<where>
			<include refid="criteria"></include>
	                <![CDATA[   AND ROWNUM <= #{pageNum} * #{amount} ]]>
		</where>
		ORDER BY SEQ DESC
		)
		WHERE RN > (#{pageNum} - 1) * #{amount}
	</select>
	
	<!-- 신고글 한건 -->
	<select id="getReport" resultType="ReportVO">
		SELECT SEQ,
				TARGET,
				WRITER,
				REASON,
				GEN_DATE
		FROM REPORT_BOARD
		WHERE SEQ = #{seq}
	</select>
	
	<insert id="insert">
		<selectKey keyProperty="seq" resultType="long" order="BEFORE">
			SELECT SEQ_REPORT_BOARD.NEXTVAL FROM DUAL
		</selectKey>
		INSERT INTO REPORT_BOARD VALUES (#{seq}, #{target}, #{writer}, #{reason}, SYSDATE, #{reporter})
	</insert>
	
	<select id="reportCount" resultType="int">
		SELECT COUNT(*) FROM REPORT_BOARD WHERE TARGET = #{seq} AND REPORTER = #{reporter}
	</select>
</mapper>